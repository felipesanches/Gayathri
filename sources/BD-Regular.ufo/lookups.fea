# GSUB
lookup akhn_conditional_stacking {
    ignore sub k1' xx' s1' [u1 u2 r1 r2 l1 l2];
    ignore sub k1' xx' s1' xx r3;
    sub k1' xx' s1'  by k1s1;

		ignore sub ch1' xx' ch2' [r2 l1 l2];
		sub ch1' xx' ch2' by ch1ch2;

		ignore sub p1' xx' th1' [u1 u2 r1 r2 l1 l2];
		ignore sub p1' xx' th1' xx [r3 th1];
		sub p1' xx' th1' by p1th1;


		ignore sub p1' xx' p2' [u1 u2 r1 r2 l1 l2];
		ignore sub p1' xx' p2' xx r3;
		sub p1' xx' p2' by p1p2;

		ignore sub p1' xx' s1' [u1 u2 r1 r2 l1 l2];
    ignore sub p1' xx' s1' xx [r3 s1];
    sub p1' xx' s1'  by p1s1;

		ignore sub p3' xx' th3' [u1 u2 r1 r2 l1 l2];
		ignore sub p3' xx' th3' xx [r3 th3];
		sub p3' xx' th3'  by p3th3;

		ignore sub y1' xx' k1' [r2 l1 l2];
    ignore sub y1' xx' k1' xx [k1];
		sub y1' xx' k1'  by y1k1;

		ignore sub y1' xx' k1k1' [u2 r1 r2 l1 l2];
		ignore sub y1' xx' k1k1' xx r3;
		sub y1' xx' k1k1' by y1k1k1;

		ignore sub y1' xx' th1' [u1 u2 r1 r2 l1 l2];
		ignore sub y1' xx' th1' xx [r3 th1];
		sub y1' xx' th1' by y1th1;

		ignore sub l3' xx' k1' [r2 l1 l2];
		sub l3' xx' k1' by l3k1;

		ignore sub z1' xx' m1' [u1 u2 r1 r2 l1 l2];
		ignore sub z1' xx' m1' xx [r3 m1];
    sub z1' xx' m1' by z1m1;

		ignore sub sh' xx' k1' [r2 l1 l2];
		sub sh' xx' k1' by shk1;

		ignore sub sh' xx' [t1 nh]' xx [t1 nh];
		ignore sub sh' xx' t1' xx' r3' [u1 u2 r1 r2 l1 l2];
		ignore sub sh' xx' [t1 t2]' [r1 r2 l1 l2];
		sub sh' xx' t1' by sht1;
		sub sh' xx' t2' by sht2;
		sub sh' xx' nh' by shnh;

		ignore sub sh' xx' p1' [u1 u2 r1 r2 l1 l2];
		ignore sub sh' xx' p1' xx [p1 r3];
		sub sh' xx' p1' by sh1p1;

		ignore sub sh' xx' m1' [u1 u2 r1 r2 l1 l2];
		ignore sub sh' xx' m1' xx [m1 r3];
		sub sh' xx' m1' by shm1;

    ignore sub s1' xx' k1' [r2 l1 l2];
    sub s1' xx' k1' by s1k1;

    ignore sub s1' xx' [m1 n1 p1]' [u1 u2 r1 r2 l1 l2];
		ignore sub s1' xx' m1' xx [m1 r3];
		ignore sub s1' xx' n1' xx [n1 r3];
		ignore sub s1' xx' p1' xx [p1 r3];
    sub s1' xx' m1' by s1m1;
		sub s1' xx' n1' by s1n1;
		sub s1' xx' p1' by s1p1;

    ignore sub s1' xx' k1k1' [u2 r1 r2 l1 l2];
		ignore sub s1' xx' k1k1' xx r3;
    sub s1' xx' k1k1' by s1k1k1;

    ignore sub s1' xx' th1' [u1 u2 r1 r2 l1 l2];
		ignore sub s1' xx' th1' xx' r3' [u1 u2 r1 r2 l1 l2];
    sub s1' xx' th1' by s1th1;

		ignore sub s1' xx' rhrh' xx r3;
    sub s1' xx' rhrh'  by s1rhrh;

		ignore sub zh' xx' ch1' [u1 u2 r1 r2 l1 l2];
		ignore sub zh' xx' ch1' xx [ch1 r3];
		sub zh' xx' ch1'  by zh1ch1;

} akhn_conditional_stacking;

lookup psts_vowel_signs {
  lookupflag IgnoreMarks;
    sub y1xx k1  by y1k1;
		sub y1xx k1k1  by y1k1k1;
		sub y1k1 u1  by y1k1u1;
		sub y1k1 u2  by y1k1u2;
		sub y1k1 r1  by y1k1r1;
    sub y1k1k1 u1  by y1k1k1u1;
    sub s1k1 u1  by s1k1u1;
		sub s1k1 u2  by s1k1u2;
		sub s1k1 r1  by s1k1r1;
    sub s1k1k1 u1 by s1k1k1u1;
		sub shk1 u1  by shk1u1;
		sub shk1 u2  by shk1u2;
		sub shk1 r1  by shk1r1;
} psts_vowel_signs;
