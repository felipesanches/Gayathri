
# GPOS
lookup viramaPos {
  lookupflag 0;
    pos xx [quotesingle quotedbl quoteleft quoteright quotedblleft quotedblright] 400;
    pos xx parenleft 200;
    pos xx parenright 400;
	pos xx exclam 200;
} viramaPos;

lookup latinPos {
  lookupflag 0;
    pos [r v f V Y A L w W T t] [e c a d o q g] -75;
    pos [a e b c o p g] [v V A L Y w W T] -75;
    pos [A L] [T V] -25;
    pos [V T] [A] -25;
 } latinPos;

feature kern {

 script DFLT;
     language dflt ;
      lookup viramaPos;
      lookup latinPos;

 script latn;
     language dflt ;
      lookup viramaPos;
      lookup latinPos;

 script mlm2;
     language dflt ;
      lookup viramaPos;
      lookup latinPos;

 script mlym;
     language dflt ;
      lookup viramaPos;
      lookup latinPos;
} kern;

